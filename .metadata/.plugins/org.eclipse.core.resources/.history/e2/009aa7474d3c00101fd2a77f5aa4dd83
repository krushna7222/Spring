<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">
   
    <!-- bean definitions here -->

    <!--  initializing bean using p schema -->
     <!--  p means property schema is an alternative to the <property> tag. 
     It is used to reduced the line of code in xml file
       by using p schema we can initialize all the property of a bean in one line  -->   
      
     
    <bean class="com.di.Schema_Injection.Book" id="b1">
    	<property name="name" value="Core Java"></property>
    	<property name="author" value="XYZ"></property>
    	<property name="price" value="799.99"></property>
    	<property name="quantity" value="171"></property>    	
    </bean>
    
    <bean class="com.di.Schema_Injection.Book" id="b2">
    	<property name="name" value="Python"></property>
    	<property name="author" value="ABC"></property>
    	<property name="price" value="499.99"></property>
    	<property name="quantity" value="131"></property>    	
    </bean>
    
    </beans>